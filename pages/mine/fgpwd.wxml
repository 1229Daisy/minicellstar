                        <view style="width: 90%;height: auto;margin:20px auto;">
                            <view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">

                                <view style="width: 30px;height: 45px;position: relative;">
                                    <image mage
                                        style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                        mode="widthFix" src="https://app.cell-stars.com/public/images/p01.png">
                                    </image>

                                </view>
                                <view style="width: 300px;height: auto;display:flex;">
