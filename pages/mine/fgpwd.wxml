                                        placeholder="请输入电话号码" placeholder-class="phcolor" bindinput="phoneInput"/>
                                    <view ><button disabled="{{disabled}}" bindtap="btnclic"
                                            style="height: 35px;width: 200rpx;background: linear-gradient(#57ce8c,#009944);line-height: 35rpx;font-size: 20rpx;color: white;">发送验证码</button>
                                    </view>
                                </view>


                            </view>


                            <view>
                                <view view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">
                                    <view style="width: 30px;height: 45px;position: relative;">
                                        <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                            mode="widthFix" src="https://app.cell-stars.com/images/p03.png">
                                        </image>
                                    </view>
                                    <view style="width: 300px;height: auto;">
                                        <input style="width: 100%;height: 45px;font-size: 12px;" type="number"
                                            placeholder="验证码" bindinput="vdcodeIn" placeholder-class="phcolor" />

                                    </view>

                                </view>
                            </view>
                            
                            <view view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">
                                <view style="width: 30px;height: 45px;position: relative;">
                                    <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                        mode="widthFix" src="https://app.cell-stars.com/public/images/p04.png">
                                    </image>
                                </view>
                                <view style="width: 300px;height: auto;">
                                    <input style="width: 100%;height: 45px;font-size: 12px;" type="password"
