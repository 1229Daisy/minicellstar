                                    <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                        mode="widthFix" src="https://app.cell-stars.com/public/images/p04.png">
                                    </image>
                                </view>
                                <view style="width: 300px;height: auto;">
                                    <input style="width: 100%;height: 45px;font-size: 12px;" type="password"
                                        placeholder="确认新密码" placeholder-class="phcolor" bindinput="cmpwdIn" />

                                </view>

                            </view>
