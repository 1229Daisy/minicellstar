<view style="width:100%;height:auto;">
  <view style="width: 100%;height: auto;position: absolute;background-color: #009944;">
  <!-- <image src="https://bainuo.beijingepidial.com/public/img/02hpv.jpg"style="width: 100%;height: auto;" mode="widthFix" ></image> -->
      <view style="width: 100%;font-size: 46rpx;font-weight: 700;text-align: center;margin-top: 100rpx;color: #fff;">预约信息</view>
    <view style="width: 100%;height: 100rpx;"></view>
  <view style="width: 100%;height: 800rpx;top: 200rpx;border-top-left-radius: 30rpx;border-top-right-radius: 30rpx; background-color: white;">
      <form bindsubmit='searchBox'>
        <view style="width: 100%;height: auto;">
          <view style="width: 90%;height: 109rpx;margin: 0 auto;border-radius: 30rpx;">
<!-- 客户姓名 -->
            <view
              style='width:97.5%;height:100rpx;margin-left: 1%;margin-top: 70rpx; border: 3rpx solid #009944; border-radius: 15rpx; display:inline-block; background:#fff;align-self: center;position: relative;'>
              <input
                style='width:80%;display:inline-block;height:100rpx;left: 10rpx; color: black;font-size: 40rpx; position: absolute;'
                placeholder-style='font-size:40rpx;' placeholder='客户姓名' type='text' bindinput="inputVal"
                value='{{barcode}}'></input>
              <view style='width:16%;display:inline-block;height:70rpx;bottom: 16rpx;right: 20rpx; position: absolute;'>
              </view>
            </view>
            <!-- 预约时间 -->
            <view
              style='width:97.5%;height:100rpx;margin-left: 1%;margin-top: 40rpx; border: 3rpx solid #009944; border-radius: 15rpx; display:inline-block; background:#fff;align-self: center;position: relative;'>
              <picker mode="date" value="{{reservedate}}" start="2018-01-01" end="" bindchange='bininput_reservedate'>
              <input
                style='width:80%;display:inline-block;height:100rpx;left: 10rpx; color: black;font-size: 40rpx; position: absolute;'
                placeholder-style='font-size:40rpx;'disabled="true" placeholder='预约日期' auto-focus="true" type='date' 
                value='{{reservedate}}'></input>
              </picker>
              <view style='width:16%;display:inline-block;height:70rpx;bottom: 16rpx;right: 20rpx; position: absolute;'>
                <image src='../../img/booking2.png' bindtap="bininput_reservedate"
                  style='display:inline;' mode="aspectFit">
                </image>
              </view>
            </view>
            <!-- 预约项目 -->
            <view
              style='width:97.5%;height:100rpx;margin-left: 1%;margin-top: 40rpx; border: 3rpx solid #009944; border-radius: 15rpx; display:inline-block; background:#fff;align-self: center;position: relative;'>
              <input
                style='width:80%;display:inline-block;height:100rpx;left: 10rpx; color: black;font-size: 40rpx; position: absolute;'
                placeholder-style='font-size:40rpx;' placeholder='预约项目' type='text' bindinput="inputVal"
                value='{{barcode}}'></input>
              <view style='width:16%;display:inline-block;height:70rpx;bottom: 16rpx;right: 20rpx; position: absolute;'>
                <image src='../../img/booking1.png' bindtap="scanCode"
                  style='display:inline;' mode="aspectFit">
                </image>
              </view>
            </view>
            <!-- 预定日期 -->
            <view
              style='width:97.5%;height:100rpx;margin-left: 1%;margin-top: 40rpx; border: 3rpx solid #009944; border-radius: 15rpx; display:inline-block; background:#fff;align-self: center;position: relative;'>
              <input
                style='width:80%;display:inline-block;height:100rpx;left: 10rpx; color: black;font-size: 40rpx; position: absolute;'
                placeholder-style='font-size:40rpx;' placeholder='使用日期' type='text' bindinput="inputVal"
                value='{{barcode}}'></input>
              <view style='width:16%;display:inline-block;height:70rpx;bottom: 16rpx;right: 20rpx; position: absolute;'>
                <image src='../../img/booking2.png' bindtap="scanCode"
                  style='display:inline;' mode="aspectFit">
                </image>
              </view>
            </view>
        <button class="submit" bindtap="checkHpvReport">注册/查询</button>
        <button class="history" bindtap="checkHpvReport">已预约查询</button>
        <view style="width: 100%;height: 50rpx;"></view>
          </view>
        </view>
      </form>
    
    </view>
  </view>
</view>